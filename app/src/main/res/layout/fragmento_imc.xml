<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@string/texto_etiqueta_estatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            tools:text="@string/texto_etiqueta_estatura" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/campo_estatura" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            tools:text="@string/texto_etiqueta_peso"
            android:text="@string/texto_etiqueta_peso" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number|numberDecimal"
            android:ems="10"
            android:id="@+id/campo_peso" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>



        <Button
            android:text="@string/texto_boton_calcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton_calcular"
            tools:text="@string/texto_boton_calcular" />

        <Button
            android:text="@string/texto_boton_limpiar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boton_limpiar"
            tools:text="@string/texto_boton_limpiar"
            android:elevation="0dp" />

        <TextView
            android:text="@string/texto_etiqueta_resultado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            tools:text="@string/texto_etiqueta_resultado" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etiqueta_imc" />

    </LinearLayout>
</LinearLayout>